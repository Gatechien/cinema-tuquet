{% extends 'base.html.twig' %}

{% block title %}Casting index{% endblock %}

{% block body %}
{% include "back/partials/_nav_back.html.twig" %}
<div class="container-xl bg-light p-5 border-top">
    <h1>Liste des Castings</h1>

    <a type="button" href="{{ path('app_back_casting_new') }}"><span class="badge bg-success fs-6 mx-2 my-2"> Ajouter un Casting </span></a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Role</th>
                <th>CreditOrder</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for casting in castings %}
            <tr>
                <td>{{ casting.id }}</td>
                <td>{{ casting.role }}</td>
                <td>{{ casting.creditOrder }}</td>
                <td>
                    <a type="button" href="{{ path('app_back_casting_show', {'id': casting.id}) }}"><span class="badge bg-success fs-6 mx-2 my-2"> Afficher </span></a>
                    <a type="button" href="{{ path('app_back_casting_edit', {'id': casting.id}) }}"><span class="badge bg-warning text-dark fs-6 mx-2 my-2"> Editer </span></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
