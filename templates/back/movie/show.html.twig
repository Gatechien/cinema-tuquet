{% extends 'base.html.twig' %}

{% block title %}Film/Série{% endblock %}

{% block body %}
<div class="container-xl bg-light p-5 border-top">
    <h1> {{ movie.type|capitalize }} "{{ movie.title }}"</h1>

    <a type="button" href="{{ path('app_back_movie_index') }}"><span class="badge bg-warning text-dark fs-6 mx-2 my-2"> Retour à la liste </span></a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ movie.type }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ movie.duration }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ movie.summary }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>
                    <img class="border" src="{{ movie.poster }}" />
                </td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ movie.rating }}</td>
            </tr>
        </tbody>
    </table>

        <a type="button" href="{{ path('app_back_movie_edit', {'slug': movie.slug}) }}"><span class="badge bg-warning text-dark fs-6 ms-2"> Editer </span></a>

    {% if is_granted('ROLE_ADMIN') %}
        {{ include('back/movie/_delete_form.html.twig') }}
    {% endif %}
</div>
{% endblock %}
