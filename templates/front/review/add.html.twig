{% extends 'base.html.twig' %}

{% block title %}Ajouter une critique{% endblock %}

{% block body %}
<main class="mb-4">
    <div class="container px-4 px-lg-6">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="my-5">
                    <h2 class="my-5">Ajouter une critque sur : {{ movie.title }}</h2>

                {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

                {{ form_widget(form) }}
                        <br />
                        <div class="text-center">
                            <button class="btn btn-danger text-uppercase disable" type="submit">Ajouter</button>
                        </div>

                {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}
