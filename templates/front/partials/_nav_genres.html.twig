<div class="col-12 col-lg-3">
    <h2 class="text-center text-muted fw-bold mb-4">Les genres</h2>
    <ul class="d-flex flex-column flex-wrap list-unstyled justify-content-center">
    {% for genre in genresList %}
        <li class="shadow-sm btn btn-sm btn-warning text-dark mx-1 mb-2" >
            <a class="text-dark" href="{{ path('homeByGenre', {id: genre.genreId}) }}"><strong>{{genre.name}}</strong></a>
        </li>
    {% else %}
        <em>Aucun genre</em>
    {% endfor %}
    </ul>
</div>